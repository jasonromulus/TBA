<form action="/charities/donations" method="POST">
    <input type="hidden" value="{{charity._id}}" name="charityId">
    <fieldset>
        <legend> Add Entry </legend>
         <!-- Full Name -->
        <div class="form-group">
            <label for="date"> Full Name </label> <br>
            <input class="form-control" id="name" type="string" name="name" placholder="First Name"/>
        </div>
        <!-- DATE -->
        <div class="form-group">
            <label for="date"> Date </label> <br>
            <input class="form-control" id="date" type="date" name="date" placeholder="Enter Today's Date"/>
        </div>
        <!-- NOTES -->
        <div class="form-group">
          <label for="notes">Entry</label><br>
          <textarea class="form-control"
          id="notes"
          name="notes"
          rows="5"
          placeholder="Entry..."/></textarea>
        </div>
    </fieldset>
    <!-- BUTTON -->
    <div class='form-group'>
        <button class="btn btn-primary" type="submit"> Add Entry </button>
    </div>
</form>
